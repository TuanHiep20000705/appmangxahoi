<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_layout_item_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avt_user_notication_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/txt_ten_user_notification_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/img_icon_like_notification_item"
        android:layout_toRightOf="@+id/img_avt_user_notication_item"
        android:text="@string/app_name"
        android:textColor="#505050"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_content_notification_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ten_user_notification_item"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/img_icon_like_notification_item"
        android:layout_toRightOf="@+id/img_avt_user_notication_item"
        android:text="@string/txt_da_thich"
        android:textColor="#505050"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_ngay_send_notification_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_content_notification_item"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/img_icon_like_notification_item"
        android:layout_toRightOf="@+id/img_avt_user_notication_item"
        android:text="12/12/2022"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/img_icon_like_notification_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_like" />
</RelativeLayout>