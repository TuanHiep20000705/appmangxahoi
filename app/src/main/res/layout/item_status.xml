<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avt_user_post_item_status"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/txt_ten_user_post_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/img_avt_user_post_item_status"
        android:text="@string/app_name"
        android:textColor="#505050"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ngay_post_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ten_user_post_item_status"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/img_avt_user_post_item_status"
        android:text="02/12/2022"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/but_edit_status_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_toLeftOf="@+id/but_delete_status_item_status"
        android:background="@null"
        android:src="@drawable/ic_fix_status" />

    <ImageButton
        android:id="@+id/but_delete_status_item_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_cancel"/>

    <TextView
        android:id="@+id/txt_content_status_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_avt_user_post_item_status"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:text="@string/app_name"
        android:textColor="#505050"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_hinh_status_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_content_status_item_status"
        android:layout_marginTop="9dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_so_like_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_hinh_status_item_status"
        android:layout_marginTop="10dp"
        android:text="100 likes"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_so_comment_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_hinh_status_item_status"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="100 comments"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_so_like_item_status"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/but_like_item_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_unlike" />

        <ImageButton
            android:id="@+id/but_comment_item_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_comment" />
    </LinearLayout>
</RelativeLayout>