<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:endColor="#60BAF6" android:startColor="#8B4DA6" />
            <corners android:radius="9dp" />
            <stroke android:width="2dp" android:color="@android:color/background_light" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:endColor="#057CCC" android:startColor="#680294" />
            <corners android:radius="9dp" />
            <stroke android:width="2dp" android:color="@android:color/background_light" />
        </shape>
    </item>
</selector>